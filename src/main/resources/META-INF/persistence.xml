
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="ru.itis.work-project">
        <class>ru.itis.grocerystore.models.Student</class>
        <class>ru.itis.grocerystore.models.Company</class>
        <class>ru.itis.grocerystore.models.Teacher</class>
        <class>ru.itis.grocerystore.models.Image</class>
        <class>ru.itis.grocerystore.models.Skill</class>
        <class>ru.itis.grocerystore.models.Language</class>
        <class>ru.itis.grocerystore.models.WorkExperience</class>
        <class>ru.itis.grocerystore.models.Achievement</class>
        <class>ru.itis.grocerystore.models.RecommendationLetter</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/grocery_store"/>
        </properties>
    </persistence-unit>
</persistence>